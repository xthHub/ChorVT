        <Label Foreground="#FF00B9FF" VerticalContentAlignment="Center" FontSize="18" Content="Process Name" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="160" Height="30"/>
        <Rectangle HorizontalAlignment="Left" Height="2" Margin="0,30,0,0" VerticalAlignment="Top" Width="280" Fill="#FFD6D6D6"/>
        <Button Content="OK" FontSize="14" HorizontalAlignment="Left" Margin="259,108,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox Name="TextBox_ProcessName" HorizontalAlignment="Left" Height="23" Margin="10,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="324"/>
        <Label Content="Process name should be unique." Foreground="Gray" HorizontalAlignment="Left" Margin="138,75,0,0" VerticalAlignment="Top"/>

    </Grid>
</controls:MetroWindow>
