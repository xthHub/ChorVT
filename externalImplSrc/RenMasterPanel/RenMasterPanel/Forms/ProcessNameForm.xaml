        xmlns:local="clr-namespace:RenMasterPanel.Forms"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Create Process" Height="180" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
